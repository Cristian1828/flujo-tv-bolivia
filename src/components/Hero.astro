          </div>
        </div>
      </div>

      <!-- Right - Visual deportivo -->
      <div class="order-1 lg:order-2 relative">
        <!-- Glow effect deportivo -->
        <div class="absolute -inset-4 bg-gradient-to-r from-green-600/20 to-emerald-600/20 rounded-3xl blur-3xl"></div>
        
        <!-- Stadium mockup card -->
        <div class="relative">
