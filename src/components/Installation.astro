    number: "1",
    title: "Instala la App",
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>`,
    description: "Descarga e instala Flujo TV en tu dispositivo favorito",
    action: "#descarga",
    buttonText: "Ir a Descargas",
    color: "from-blue-500 to-cyan-500"
  },
  {
    number: "2",
    title: "Adquiere una Cuenta",
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="9" cy="9" r="7"/><path d="M14.5 14.5l6 6"/><path d="M12 6a3 3 0 0 1 0 6"/></svg>`,
    description: "Elige el plan que mejor se adapte a tus necesidades",
    action: "#planes",
    buttonText: "Ver Planes",
    color: "from-green-500 to-emerald-500"
  },
  {
    number: "3",
    title: "Ingresa y Disfruta",
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polygon points="5 3 19 12 5 21 5 3"/></svg>`,
    description: "Inicia sesión con tus credenciales y empieza a ver",
    action: "#",
    buttonText: "Ver Guía",
    color: "from-purple-500 to-pink-500",
    isVideo: true
